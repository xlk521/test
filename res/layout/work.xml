				</LinearLayout>
				<LinearLayout
				    style="@style/linearLayout04"
				    android:background="@drawable/border" >
					<TextView
						android:layout_width="0dp"
						android:layout_height="fill_parent"
						android:text="列车长 "
						android:gravity="right"
						android:layout_weight="5"/>
