<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="linearLayout01">
        <item name="android:layout_width">1300dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minWidth">1200dp</item>
        <item name="android:minHeight">500dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearLayout02">
        <item name="android:layout_width">1300dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearLayout03">
        <item name="android:layout_width">1300dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearLayout04">
        <item name="android:layout_width">1300dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearLayout05">
        <item name="android:layout_width">1300dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearLayout06">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearLayout07">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="lineBtn">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000</item>
    </style>
    <style name="lineBtn02">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000</item>
    </style>
    <style name="lineTextView"><!-- textview 左右排版 -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="lineTextView02"><!-- editview 左右排版-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">50dp</item>
    </style>
    <style name="lineTextView03"><!-- textview 上下排版 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="lineTextView04"><!-- editview 上下排版-->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minHeight">50dp</item>
    </style>
</resources>